<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <h1>Course</h1>

    <form method="POST" action="/staff/category/course/add" id='{{result.category_id}}' style="width: 200; height:300">
        <input type="hidden" name="category_id" value="{{category}}">
        <input type="text" name="courseName">
        <input type="text" name="description">
        <select id="tutor" name='tutor'>
            {{#each tutor}}
                <option value="{{tutor_id}}">{{name}}</option>
            {{/each}}
        </select>
        <button type="submit">Add course</button>
    </form>

    <br><br>

    {{#each result}}
    <div>
        <p>{{courseName}}</p>
        <p>Tutor: {{name}} </p>
        <p>{{description}}</p>
        <button onclick="show({{course_id}})">Edit</button>
        <a href="/staff/category/course/delete/{{course_id}}">Delete</a>
    </div>
    {{/each}}
</body>

</html>